<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Shows Found</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/public/main_styles.css">
    </head>
    <body>
      <h1>Shows Found</h1>
      <h2>{{{showSearchTerm}}}</h2>
      <section>
        {{#if shows}}
            <ul>
                {{#each shows}}  
                <li>
                  <a href="/show/{{this.show.id}}"> {{this.show.name}}</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="show-not-found">We're sorry, but no results were found for {{showSearchTerm}}.</p>
        {{/if}}
        <a href ='/'>Make another search</a>
      </section>
  </body>
</html>